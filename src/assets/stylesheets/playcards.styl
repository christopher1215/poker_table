.playcard
  text-align center
  box-shadow 0 2px 2px rgba(0,0,0,.4)
  font-family 'Times New Roman'

.playcard-big
  font-size 35px
  padding-top 32px

.playcard-middle
  font-size 28px
  padding-top 26px

.playcard-small
  font-size 20px
  padding-top 6px

.playcard-trefle
  color #4a4740
.playcard-hearts
  color #c34c45

.playcard-big.playcard-hearts
  sprite($hearts-card-big)
.playcard-big.playcard-trefle
  sprite($trefle-card-big)

.playcard-middle.playcard-hearts
  sprite($hearts-card-middle)
.playcard-middle.playcard-trefle
  sprite($trefle-card-middle)

.playcard-small.playcard-hearts
  sprite($hearts-card-small)
.playcard-small.playcard-trefle
  sprite($trefle-card-small)
